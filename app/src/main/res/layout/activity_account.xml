<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="Account"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accountItems"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#FAECE6"
            android:text="Listed Items"
            android:textAllCaps="false"
            android:textColor="#505050"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accountSold"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#FAECE6"
            android:text="Recently Sold"
            android:textAllCaps="false"
            android:textColor="#505050"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accountPurchased"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#FAECE6"
            android:text="Recently Purchased"
            android:textAllCaps="false"
            android:textColor="#505050"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accountInfo"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#FAECE6"
            android:text="My Info"
            android:textAllCaps="false"
            android:textColor="#505050"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accountLogout"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:backgroundTint="#FAECE6"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="#505050"
            android:textSize="20sp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/accountBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>